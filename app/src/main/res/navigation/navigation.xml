<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/groupsFragment">

    <fragment
        android:id="@+id/dailyOrdersFragment"
        android:name="com.f2h.f2h_buyer.screens.group.daily_orders.DailyOrdersFragment" />
    <fragment
        android:id="@+id/groupsFragment"
        android:name="com.f2h.f2h_buyer.screens.group_list.GroupsFragment"
        android:label="My Groups" >
        <action
            android:id="@+id/action_groupsFragment_to_groupDetailsTabsFragment"
            app:destination="@id/groupDetailsTabsFragment"
            app:enterAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/groupDetailsTabsFragment"
        android:name="com.f2h.f2h_buyer.screens.group.group_tabs.GroupDetailsTabsFragment"
        android:label="group_details_tabs_fragment"
        tools:layout="@layout/fragment_group_details_tabs" >
        <action
            android:id="@+id/action_groupDetailsTabsFragment_to_dailyOrdersFragment"
            app:destination="@id/dailyOrdersFragment"
            app:enterAnim="@android:anim/slide_in_left" />
        <argument
            android:name="groupName"
            app:argType="string"
            android:defaultValue="Group Name" />
        <action
            android:id="@+id/action_groupDetailsTabsFragment_to_allItemsFragment"
            app:destination="@id/allItemsFragment"
            app:enterAnim="@android:anim/slide_in_left" />
        <action
            android:id="@+id/action_groupDetailsTabsFragment_to_groupWalletFragment"
            app:destination="@id/groupWalletFragment"
            app:enterAnim="@android:anim/slide_in_left" />
        <action
            android:id="@+id/action_groupDetailsTabsFragment_to_preOrderFragment"
            app:destination="@id/preOrderFragment"
            app:enterAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/allItemsFragment"
        android:name="com.f2h.f2h_buyer.screens.group.all_items.AllItemsFragment" />
    <fragment
        android:id="@+id/groupWalletFragment"
        android:name="com.f2h.f2h_buyer.screens.group.group_wallet.GroupWalletFragment" />
    <fragment
        android:id="@+id/preOrderFragment"
        android:name="com.f2h.f2h_buyer.screens.group.pre_order.PreOrderFragment">
        <argument
            android:name="itemId"
            android:defaultValue="0L"
            app:argType="long" />
    </fragment>
</navigation>