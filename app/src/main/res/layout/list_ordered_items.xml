<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="uiModel"
            type="com.f2h.f2h_buyer.screens.group.daily_orders.DailyOrdersModel" />
        <variable
            name="clickListener"
            type="com.f2h.f2h_buyer.screens.group.daily_orders.OrderedItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(uiModel)}">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/groupImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="TODO"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/f2h_logo" />

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:text="@{uiModel.itemName}"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toStartOf="@+id/buttonIncrease"
                    app:layout_constraintStart_toEndOf="@+id/groupImage"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/itemDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{uiModel.itemDescription}"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/itemName"
                    app:layout_constraintStart_toStartOf="@+id/itemName"
                    app:layout_constraintTop_toBottomOf="@+id/itemName" />

                <Button
                    android:id="@+id/buttonDecrease"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:text="-"
                    app:buttonVisibilityFormatted="@{uiModel}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/buttonIncrease"
                    app:layout_constraintHorizontal_bias="0.507"
                    app:layout_constraintStart_toStartOf="@+id/buttonIncrease" />

                <Button
                    android:id="@+id/buttonIncrease"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="+"
                    app:buttonVisibilityFormatted="@{uiModel}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:orderedQuantityFormatted="@{uiModel}"
                    app:layout_constraintBottom_toTopOf="@+id/buttonDecrease"
                    app:layout_constraintEnd_toEndOf="@+id/buttonIncrease"
                    app:layout_constraintStart_toStartOf="@+id/buttonIncrease"
                    app:layout_constraintTop_toBottomOf="@+id/buttonIncrease" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rs. "
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="@+id/groupImage"
                    app:layout_constraintStart_toStartOf="@+id/groupImage"
                    app:layout_constraintTop_toBottomOf="@+id/groupImage"
                    app:priceFormatted="@{uiModel}" />

                <TextView
                    android:id="@+id/farmer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{`Farmer - ` + uiModel.farmerName}"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/itemDescription"
                    app:layout_constraintStart_toStartOf="@+id/itemDescription"
                    app:layout_constraintTop_toBottomOf="@+id/itemDescription" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:background="@color/grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Payable - "
                    app:layout_constraintEnd_toEndOf="@+id/farmer"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/farmer"
                    app:layout_constraintTop_toBottomOf="@+id/discount"
                    app:totalPriceFormatted="@{uiModel}" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/price"
                    app:layout_constraintStart_toStartOf="@+id/price"
                    app:layout_constraintTop_toBottomOf="@+id/price"
                    app:statusFormatted="@{uiModel}" />

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:discountFormatted="@{uiModel}"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/farmer"
                    app:layout_constraintStart_toStartOf="@+id/farmer"
                    app:layout_constraintTop_toBottomOf="@+id/farmer" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>